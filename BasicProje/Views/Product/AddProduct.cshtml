@model BasicProje.Entity.Product
@{
	ViewData["Title"] = "AddProduct";
	Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>AddProduct</h1>

<form method="post">
	@Html.Label("Ürün Adı");
	@Html.TextBoxFor(x=>x.Name, new{@class="form-control"})
	<br />
	@Html.Label("Ürün Fiyat");
	@Html.TextBoxFor(x=>x.Price,new{@class="form-control"})
	<br />
	@Html.Label("Ürün Stok");
	@Html.TextBoxFor(x=>x.Stock,new{@class="form-control"})
	<br />
	<button class="btn btn-info">Ürün EKle</button>
</form>