@using BasicProje.Entity
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Index</h1>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<h1>Müşteriler Sayfası</h1>

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Müşteri Adı</th>
        <th>İl</th>
        
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
        @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.City</td>

            <td><a href="/Customer/DeleteCustomer/@item.Id">Sil</a></td>
            <td><a href="/Customer/UpdateCustomer/@item.Id">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Customer/AddCustomer/" class="btn btn-primary">Yeni Müşteri Ekle</a>